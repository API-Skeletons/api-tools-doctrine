<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./test/Bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="orm">
            <directory>./test/ZFTest/Apigility/Doctrine/Server/ORM</directory>
        </testsuite>
        <testsuite name="odm">
            <directory>./test/ZFTest/Apigility/Doctrine/Server/ODM</directory>
        </testsuite>
        <testsuite name="all">
            <directory>./test/ZFTest/Apigility/Doctrine/Server/ORM</directory>
            <directory>./test/ZFTest/Apigility/Doctrine/Server/ODM</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>.</directory>
            <exclude>
                <directory>./vendor</directory>
                <directory>./test</directory>
                <file>./config/module.config.php</file>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="./test/code-coverage" charset="UTF-8" yui="true" lowUpperBound="35" highLowerBound="70" />
    </logging>
</phpunit>
